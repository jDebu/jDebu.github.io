azul = #2c3c51
celeste = #0ca2ba
verde = #16a286
blanco = #ffffff
plomo  = #d7dbdb
negro  = #000000
mymixins(var...)
   -webkit-box-shadow var
   -moz-box-shadow var
   box-shadow var
anchura(var)
	width var

fcolor(var)
	background-color var !important
.fazul
	fcolor azul
.fceleste
	fcolor celeste
.fverde
	fcolor verde
.fplomo
	fcolor plomo

tcolor(var)
	color var !important
.tazul
	tcolor azul
.tceleste
	tcolor celeste
.tverde
	tcolor verde
.tblanco
	tcolor blanco
.tnegro
	tcolor negro

.cristalab
   mymixins 1px 2px 5px #eee
.centrar
	anchura 90%

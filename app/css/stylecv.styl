.social
	margin-top 3em
	text-decoration none
	text-align center

.icon-google-plus,.icon-facebook2,.icon-twitter,.icon-github
	text-decoration none !important
	text-align center
	
.icon-google-plus:before,#google
	content "\ea88"

.icon-facebook2:before,#facebook
	content "\ea8d"
	
.icon-twitter:before,#twitter
	content "\ea91"

.icon-github:before 
	content "\eab1"
	
.icon-google-plus:before,.icon-facebook2:before,.icon-twitter:before,.icon-github:before
	margin .5em;
	font-size 2.5em
	color rgba(255,255,255,0.5)
	font-family 'icomoon'
	transition color 1s ease
	-o-transition color 1s ease
	-moz-transition color 1s ease
	-webkit-transition color 1s ease
	-ms-transition color 1s ease

.icon-github:hover:before
	color #629aff
.icon-facebook2:hover:before,#facebook:before
	color #4072b4
.icon-twitter:hover:before,#twitter:before
	color #00aced
.icon-google-plus:hover:before,#google:before
	color #dd4b39

#facebook:before,#twitter:before,#google:before
	transition color 1s ease
	-o-transition color 1s ease
	-moz-transition color 1s ease
	-webkit-transition color 1s ease
	-ms-transition color 1s ease
#facebook:hover:before,#twitter:hover:before,#google:hover:before
